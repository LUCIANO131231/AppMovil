<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivityAsignarTarea">

  <include
      android:id="@+id/myToolbar"
      layout="@layout/my_toolbar" />

  <EditText
      android:id="@+id/etTitulo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:hint="Ingresa el titulo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/myToolbar" />

  <EditText
      android:id="@+id/etDescripcion"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="Ingresa la descripcion"
      android:inputType="textMultiLine"
      app:layout_constraintEnd_toEndOf="@id/etTitulo"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@id/etTitulo"
      app:layout_constraintTop_toBottomOf="@id/etTitulo" />

  <EditText
      android:id="@+id/etFechaInicio"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="Ingrese la fecha de inicio"
      android:focusable="false"
      android:clickable="true"
      app:layout_constraintTop_toBottomOf="@id/etDescripcion"
      app:layout_constraintStart_toStartOf="@id/etDescripcion"
      app:layout_constraintEnd_toEndOf="@id/etDescripcion" />

  <EditText
      android:id="@+id/etFechaFinal"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="Ingrese la fecha de fin"
      android:focusable="false"
      android:clickable="true"
      app:layout_constraintTop_toBottomOf="@id/etFechaInicio"
      app:layout_constraintStart_toStartOf="@id/etFechaInicio"
      app:layout_constraintEnd_toEndOf="@id/etFechaInicio" />

  <Spinner
      android:id="@+id/spPrioridad"
      android:layout_width="230dp"
      android:layout_height="38dp"
      android:layout_marginTop="20dp"
      android:entries="@array/prioridad_array"
      app:layout_constraintEnd_toEndOf="@id/etFechaFinal"
      app:layout_constraintStart_toStartOf="@id/etFechaFinal"
      app:layout_constraintTop_toBottomOf="@id/etFechaFinal" />

  <Button
      android:id="@+id/btnAsignar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="Asignar Tarea"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/spPrioridad" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rvTareas"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@id/btnAsignar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

